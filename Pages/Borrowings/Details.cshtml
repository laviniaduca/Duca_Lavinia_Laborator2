@model Duca_Lavinia_Laborator2.Pages.Borrowings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Borrowing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Borrowing.Member)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Borrowing.Member.FullName)
        </dd>
        <dt class="col-sm-2">
           @* @Html.DisplayNameFor(model => model.Borrowing.Book) *@
           Book Details
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Borrowing.Book.Title)
        </dd>
        <dt class="col-sm-2"></dt> <!-- <dt> gol pentru structurare -->
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Borrowing.Book.Author.FullName) <!-- de aici in jos am inclus Author FullName, Price si PublishingDate ca detalii ale cartii -->
        </dd>
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Borrowing.Book.Price)
        </dd>
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Borrowing.Book.PublishingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Borrowing.ReturnDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Borrowing.ReturnDate)
        </dd>
    </dl>
